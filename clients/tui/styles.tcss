Screen {
    background: $background;
}

#main-container {
    height: 100%;
    dock: top;
}

#welcome-header {
    dock: top;
    height: auto;
    padding: 1 2;
    background: $background;
    transition: opacity 300ms;
}

#welcome-header.hidden {
    opacity: 0;
}

#scrollable-content {
    height: 100%;
    overflow-y: auto;
    scrollbar-gutter: stable;
}

#chat-history {
    height: auto;
    max-height: 100%;
    overflow-y: auto;
    scrollbar-gutter: stable;
    scrollbar-size-vertical: 1;
    scrollbar-background: $background;
    scrollbar-color: $primary;
}

#model-info {
    dock: bottom;
    height: auto;
    padding: 0 2;
    background: $surface;
    color: $text-muted;
}

#input-area {
    dock: bottom;
    height: auto;
    padding: 1 2;
    background: $background;
}

#model-name {
    width: 80%;
}

#query-time {
    width: 20%;
    text-align: right;
}

#status-bar {
    dock: bottom;
    height: auto;
    padding: 1 2;
    background: $background;
    color: $text-muted;
}

#model-id, #provider, #input-tokens, #output-tokens {
    width: auto;
}

#model-id {
    color: $accent;
    padding-right: 1;
}

#provider {
    color: $text-muted;
    padding-right: 1;
}

#input-tokens {
    color: $success;
    padding-right: 1;
}

#output-tokens {
    color: $warning;
}

#spinner {
    width: 20;
    display: none;
}

#spinner.active {
    display: block;
}

#exit-hint {
    width: 1fr;
    text-align: right;
}

#query-input {
    width: 100%;
    min-height: 6;
    max-height: 12;
    background: $surface;
    border-left: thick $success;
    border-top: none;
    border-right: none;
    border-bottom: none;
    color: $text;
    padding: 1 2;
}

#send-btn {
    min-width: 4;
}

.pending-query {
    border-left: thick $success;
    border-top: none;
    border-right: none;
    border-bottom: none;
}

.user-msg {
    border-left: thick $success;
    color: $text-warning;
}

.agent-msg {
    border-left: solid $panel;
    color: $text;
}

.final-answer {
    border-left: thick $accent;
    color: $text;
}

.final-answer-label {
    color: $accent;
    text-style: bold;
}

.system-msg {
    color: $text-muted;
    text-style: italic;
}

.thinking-box {
    background: $surface;
    margin: 1 0;
}

.step-header {
    height: auto;
    padding: 0 1;
}

.step-title {
    color: $accent;
    text-style: bold;
    width: auto;
}

.expand-btn {
    min-width: 3;
}

.step-log-container {
    border: solid $panel;
    margin: 1 0;
}

.query-section {
    height: auto;
    min-height: 35vh;
    padding: 1;
    background: $surface;
    border: solid $panel;
    transition: opacity 200ms;
    opacity: 1;
}

.query-section.fade-in {
    opacity: 0;
}

.query-section .query-text {
    color: $accent;
    text-style: bold;
}

.query-section .final-answer-section {
    border-left: thick $accent;
}

StepsTabbedContent {
    height: 35vh;
}